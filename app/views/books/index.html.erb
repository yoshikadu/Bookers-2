<div class="container">
 <div class="row">
  <div class="col-xs-3">
    <h2>User info</h2>
    <div class="user-profile-image">
       <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
    </div>

    <table class="table">
					
					<tbody>
						<tr>
              <th>
              name
              <%= @user.name %>
              </th>
						</tr>
						<tr>
              <th>
              introduction
              <%= @user.introduction %>
              </th>
						</tr>
					</tbody>


		</table>

    
    <%= link_to "", edit_user_path(@user.id), class:"btn btn-default col-xs-12 glyphicon glyphicon-wrench" %>
    
    
    
    <h2>New book</h2>
    <%= form_for(@book) do |f| %>
    　<% if @book.errors.any? %>
          <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li> 
          <% end %>
      <% end %> 　
    
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <button class="btn btn-primary col-xs-12">Create Book</button>
        
    
    <% end %>
  </div>


  <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table">
      <thead>
        <tr>
          <td></td>
          <td>Title</td>
          <td>Opinion</td>
        </tr>
      </thead>
      <tbody> 
       <tbody>
	        <% @books.each do |book| %>
	        	<tr>
	        		<td><%= link_to user_path(book.user.id) do %><%= attachment_image_tag @book.user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "50x50" %><% end %></td>
	        		<td><%= link_to book.title, book_path(book.id) %></td>
	        		<td><%= book.body %></td>
	        	</tr>
	        <% end %>
      </tbody>  
    </table>  
  </div>

 </div> 
</div>
