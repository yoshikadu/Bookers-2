<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <%= @book.errors.count %>errors prohibited this obj from being saved:Title can't be blank	
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-lg-6 col-lg-offset-3">
			<h1>Editing Book</h1>

			<%= flash[:notice] %>

			<%= form_for(@book) do |f| %>

			<h4>Title</h4>
			<%= f.text_field :title, class: "col-xs-12" %>

			<h4>Opinion</h4>
			<%= f.text_area :body, class: "col-xs-12 body-col" %><br>

			<button type="submit" class="btn btn-primary btn-block">Update Book</button>

			<% end %>
			
			
			<%= link_to "Show", book_path %>/<%= link_to "Back", books_path %>
		</div>
	</div>
</div>