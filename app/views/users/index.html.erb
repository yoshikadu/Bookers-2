<div class="container">
 <div class="row">
  <div class="col-xs-3">
    <h2>User info</h2>
    <div class="user-profile-image">
       <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
    </div>

    <table class="table">
					
					<tbody>
						<tr>
							<th>name</th>
							<th><%= @current_user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @user.introduction %></th>
						</tr>
					</tbody>


		</table>

    
    <%= link_to "", edit_user_path(@user.id), class:"btn btn-default col-xs-12 glyphicon glyphicon-wrench" %>
    
    
    
    <h2>New book</h2>
    <%= form_for(@book) do |f| %>
    　<% if @book.errors.any? %>
          <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li> 
          <% end %>
      <% end %> 　
    
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <button class="btn btn-primary col-xs-12">Create Book</button>
        
    
    <% end %>
  </div>





  <div class="col-xs-9">
    <h2>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <td>image</td>
          <td>name</td>
          <td></td>
        </tr>
      </thead>
      <tbody> 
       <% @users.each do |user| %> 
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
       <% end %> 
      </tbody>  
    </table>  
  </div>



 </div>  
</div>